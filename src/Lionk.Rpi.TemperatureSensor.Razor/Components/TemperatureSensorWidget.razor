@using Lionk.Core
@using Lionk.Core.Model.Component
@using Lionk.Core.View
@using Lionk.TemperatureSensor
@using Lionk.Core.Component
@using MudBlazor
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@namespace Lionk.TemperatureSensor
@attribute [ViewOfAttribute("Simple temperature widget", typeof(BaseTemperatureSensor), typeof(TemperatureSensorWidget), ViewContext.Widget)]

@if (Container?.Component is null)
{
    <MudText Typo="Typo.body1" Class="text-center">No sensor found</MudText>
}
else
{
    if (Container?.Component is BaseTemperatureSensor sensor)
    {
        <MudText Typo="Typo.h6" Class="bi bi-thermometer-half text-center">@sensor.InstanceName</MudText>
        <MudText Typo="Typo.body1">@GetTemperature()</MudText>
        <MudText Typo="Typo.body1"> Last read @GetTime()</MudText>
    }
}

@code {

    [Parameter] public ComponentContainer? Container { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (Container?.Component is not null && Container.Component is BaseTemperatureSensor sensor)
        {
            sensor.NewValueAvailable += (sender, e) => InvokeAsync(StateHasChanged);
        }
    }

    private string GetTemperature(int roundDecimal = 2)
    {
        BaseTemperatureSensor? sensor = (BaseTemperatureSensor?)Container?.Component;
        if (sensor is null) return "No data";
        double value = sensor.Measures[(int)sensor.TemperatureType].Value;
        string unit = sensor.Measures[(int)sensor.TemperatureType].Unit;
        string temperature = value == double.NaN ? "No data" : Math.Round(value, roundDecimal).ToString() + " " + unit;
        return temperature;
    }

    private string GetTime()
    {
        BaseTemperatureSensor? sensor = (BaseTemperatureSensor?)Container?.Component;
        if (sensor is null) return "No data";

        return sensor.Measures[(int)sensor.TemperatureType].Time.ToString() ?? "No data";
    }
}
